<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hibox.tabtest.LoTestActivity">
    <android.support.constraint.Guideline
        android:id="@+id/vertical_20_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline
        android:id="@+id/vertical_50_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:id="@+id/vertical_80_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline
        android:id="@+id/horizontal_10_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <android.support.constraint.Guideline
        android:id="@+id/horizontal_30_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>
    <android.support.constraint.Guideline
        android:id="@+id/horizontal_50_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:id="@+id/horizontal_80_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline
        android:id="@+id/horizontal_90_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_red_light"
        android:text="TITLE"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20_percent"
        app:layout_constraintRight_toRightOf="@id/vertical_50_percent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_10_percent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:src="@drawable/ic_first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_20_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_10_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_30_percent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="TAB1"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20_percent"
        app:layout_constraintRight_toRightOf="@id/vertical_50_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_10_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_30_percent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:src="@drawable/ic_second"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_20_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_30_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_50_percent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="TAB2"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20_percent"
        app:layout_constraintRight_toRightOf="@id/vertical_50_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_30_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_50_percent" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:src="@drawable/ic_third"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_20_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_50_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_80_percent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="TAB3"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20_percent"
        app:layout_constraintRight_toRightOf="@id/vertical_50_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_50_percent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_80_percent" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:src="@drawable/ic_eighth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_20_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_90_percent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="TAB8"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20_percent"
        app:layout_constraintRight_toRightOf="@id/vertical_50_percent"
        app:layout_constraintTop_toTopOf="@id/horizontal_90_percent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
